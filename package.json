    "build": "npm run validate",
    "start": "next start -p 3001"
  },
  "dependencies": {
    "next": "^14",
    "next-intl": "^4.7.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "^14",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "prettier": "^3.0.0"
  }
}
